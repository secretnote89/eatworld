    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3">
        
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/lilayiv1"
                android:scaleType="centerInside"
                android:layout_weight="3"
                android:src="@drawable/kor"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/lilaytv1"
                android:text=""
                android:textSize="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textSize="30dp"
                android:textColor="#ff0000"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:id="@+id/tv_vs"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="3"
            android:id="@+id/layout_lower">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/lilayiv2"
                android:scaleType="centerInside"
                android:layout_weight="3"
                android:src="@drawable/jap"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:id="@+id/lilaytv2"
                android:textSize="40dp"
                android:layout_gravity="center_horizontal"
                android:text=""
                android:layout_weight="1"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back"
                android:visibility="gone"
                android:text="@string/btn_back"
                android:background="@color/colorAccent"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/v_invisible"
                android:layout_weight="1"
                android:visibility="gone"
                android:clickable="false"
            />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_find"
                android:visibility="gone"
                android:text="@string/btn_find"
                android:background="@color/colorLightSkyBlue"
                android:layout_weight="1"
                android:layout_marginRight="30dp"/>

        </LinearLayout>


    </LinearLayout>
